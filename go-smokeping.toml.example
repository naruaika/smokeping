[global_tags]
project = "Projectname"
output ="influx"
[agent]
hostname = "agent_hostname"

[database.influx]
host = "scheme://ip:port"
db = "ping"
user = "ping"
pass = "pong"
step = 10

[probe.icmp]
retries = 5
step = 10

[probe.fping]
step = 60
cmd = "/usr/bin/fping"
args = ["-c", "5", "-q"]

[[group]]
name = "test1"
    [[group.host]]
	ip = "8.8.4.4"
	fqdn = "ns1.google.com"
	probe = "icmp"

    [[group.host]]
	ip = "8.8.8.8"
	fqdn = "ns2.google.com"
	probe = "fping"

[[group]]
name = "test2"
    [[group.host]]
	ip = "ip"
	fqdn = "hostname"
	probe = "icmp"